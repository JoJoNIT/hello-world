<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_result"
        android:background="@drawable/ic_priority_high_black_24dp"
        android:layout_width="10dp"
        android:layout_height="10dp" />
    <EditText
        android:id="@+id/et_id"
        android:layout_toRightOf="@id/tv_result"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="扫码结果"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/bg_black"
        />
    <ImageView
        android:id="@+id/iv_picture"
        android:layout_toRightOf="@id/et_id"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/saoma" />


    <Spinner
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/et_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:layout_marginTop="15dp">
    </Spinner>



    <TextView
        android:id="@+id/tv_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="请叙述详细情况"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@id/spinner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />
    <EditText
        android:id="@+id/et_detail"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_black"
        android:layout_marginBottom="20dp"
        android:gravity="left"/>
    <Button
        android:id="@+id/btn_submit"
        android:text="提交"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_detail"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/selector_orange"/>

</RelativeLayout>
